{
  "name": "mind-git-compiler",
  "description": "CanvasL visual compiler for spatial programming with mathematical verification",
  "version": "1.0.0",
  "type": "tool",
  "entry": "bin/mind-git-simple.cjs",
  "parameters": {
    "compile": {
      "type": "object",
      "properties": {
        "input": {
          "type": "string",
          "description": "Path to .canvas file to compile",
          "required": true
        },
        "output": {
          "type": "string",
          "description": "Output file path (optional)",
          "required": false
        },
        "target": {
          "type": "string",
          "enum": ["javascript", "typescript", "racket", "webassembly"],
          "description": "Target language for code generation",
          "default": "javascript"
        },
        "verify": {
          "type": "boolean",
          "description": "Run formal verification",
          "default": true
        }
      },
      "required": ["input"]
    },
    "validate": {
      "type": "object",
      "properties": {
        "canvas": {
          "type": "string",
          "description": "Path to .canvas file to validate",
          "required": true
        }
      },
      "required": ["canvas"]
    }
  },
  "commands": {
    "compile": "compile {{input}} --output {{output}} --target {{target}} {{#if verify}}--verify{{/if}}",
    "validate": "validate {{canvas}}"
  },
  "examples": [
    {
      "description": "Compile a canvas file to JavaScript",
      "command": "mind-git-compiler compile examples/spatial-hello-world.canvas --target javascript"
    },
    {
      "description": "Validate canvas structure",
      "command": "mind-git-compiler validate examples/math-demo.canvas"
    }
  ],
  "dependencies": [
    "@trbn/jsoncanvas",
    "logos-system/dist/compiler"
  ]
}