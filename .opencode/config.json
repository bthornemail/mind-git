{
  "$schema": "https://opencode.ai/schema/config.json",
  "model": "anthropic/claude-3-5-sonnet-20241022",
  "tools": [
    ".opencode/tool/mind-git-compiler.json",
    ".opencode/tool/mind-git-math.json",
    ".opencode/tool/mind-git-p2p.json",
    ".opencode/tool/mind-git-visualizer.json"
  ],
  "agents": [
    ".opencode/agent/canvasl-compiler.json",
    ".opencode/agent/mathematical-verification.json",
    ".opencode/agent/p2p-collaboration.json"
  ],
  "rules": [
    "Maintain mathematical integrity in all operations",
    "Follow CanvasL visual programming language specifications",
    "Preserve norm preservation in polynomial algebra",
    "Ensure formal verification matches implementation"
  ],
  "permissions": {
    "allow": [
      "read",
      "write",
      "execute"
    ],
    "deny": [
      "system"
    ]
  },
  "workspace": {
    "include": [
      "logos-system/**/*",
      "examples/**/*",
      "demos/**/*",
      "dev-docs/**/*"
    ],
    "exclude": [
      "node_modules/**/*",
      ".git/**/*",
      "*.log"
    ]
  }
}