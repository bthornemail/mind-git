{
  "name": "logos-system",
  "version": "1.1.0",
  "description": "CanvasL Mathematical Foundation - Standalone System with Formal Verification",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "canvasl": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:wasm": "cd formal && make all",
    "build:dev": "tsc --project tsconfig.json",
    "dev": "tsc --project tsconfig.build.json --watch",
    "start": "node dist/index.js",
    "test": "npm run test:unit && npm run test:formal && npm run test:security && npm run test:topological",
    "test:unit": "jest src/",
    "test:formal": "cd formal && make test",
    "test:security": "jest src/core/cryptography/production-crypto.test.ts",
    "test:topological": "node dist/test/dodecahedron-integration.test.js",
    "test:performance": "node --expose-gc dist/test/performance-benchmark.js",
    "demo:topological": "node dist/demo/dodecahedron-topological-demo.js",
    "demo:dodecahedron": "npm run build && npm run demo:topological",
    "serve": "http-server dist -p 8080",
    "clean": "rm -rf dist formal/*.o formal/*.wasm",
    "verify": "cd formal && coqc Polynomials.v && coqc IdentityChain.v && coqc AAL.v",
    "security:audit": "node dist/security/audit.js",
    "security:hardening": "npm run build && npm run test:security",
    "docker:build": "docker build -t logos-system:latest .",
    "docker:run": "docker run -p 8080:8080 logos-system:latest",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "canvasl",
    "mathematics",
    "formal-verification",
    "coq",
    "webassembly",
    "polynomial-algebra",
    "division-algebras",
    "hopf-fibrations",
    "visual-programming",
    "spatial-computing",
    "ast",
    "compiler",
    "docker",
    "topological-mnemonics",
    "polytope-computation",
    "centroid-cryptography",
    "dodecahedron",
    "semantic-primes",
    "distributed-consensus"
  ],
  "author": "Brian Thorne <bthornemail@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bthornemail/mind-git.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "webassembly-loader": "^1.1.0"
  },
  "dependencies": {
    "@trbn/jsoncanvas": "^1.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}